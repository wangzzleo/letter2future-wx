/**index.wxss**/
.banner{
  width: 100%;
  height: 400rpx;
}
.openTab{
  /* height: 200rpx; */
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;	
  margin-top: 10rpx;	
}
.openTab-child{
    flex: 1;/*一共3个li,每一个占1/3*/
    text-align: center;
    width: 200rpx;
    height: 200rpx;
    /* border: 1px solid red; */
}
.openTab-child-icon{
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  border-radius: 50%;
  margin: 0 auto;
  color: #fff;
  background: #FFB03F;
}
.openTab-child-text{
  color: #000;
  margin: 0 auto;
  font-family:  Helvetica, sans-serif;
  font-size: 30rpx;
}
.listItem{
  width: 100%;
  height: 95rpx;
  /* line-height: 105rpx; */
  margin-top: 17rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #efefef;
  font-family: Helvetica, sans-serif, Helvetica, Georgia, 'Courier New', Courier, monospace,;
}
.listItem-numBox{
 width: 10%; 
 height: 90rpx; 
 float:left;
 margin-right: 20rpx;
 /* border: 1px solid #000; */
}
.listItem-num{
  width: 45rpx;
  height:45rpx;
  line-height: 45rpx;
  margin-top: 12rpx;
  text-align: center;
  border-radius: 50%;
  background-color: red;
  color: #fff;
  font-size: 20rpx;
}
.listItem-nameBox{
  width: 65%;
  display: inline-block;
}
.listItem-name{
  height: 45rpx;
  line-height: 45rpx;
  font-size: 32rpx;
  font-weight: normal;
}
.listItem-userName{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #aaa;
}
.listItem-date{
  width: 20%;
  height: 40rpx;
  line-height: 40rpx;
  display: inline-block;
  font-size: 24rpx;
  color: #aaa;
}
.tabs-box{
  overflow: hidden;
}


